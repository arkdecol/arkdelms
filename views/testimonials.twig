
<section class="section">
	<div class="columns  is-multiline">
		<div class="column is-full has-text-centered has-small-padding-bottom">
			<h1 class="title is-size-1">{{post.title}}</h1>
		</div>
		{% for story in stories %}
			<div class="column">
				<div class="card testimonial horizontal special colored dark">
					<div class="card-content">
						<div class="image">
							<img src="{{story.thumbnail}}" alt="{{story.title}} estudiante Arkde" loading="lazy" width="100px" height="100px">
							<div class="is-hidden-desktop mobile-content">
								<div class="icons-list gold">
									<i class="bb-icon-star-fill"></i>
									<i class="bb-icon-star-fill"></i>
									<i class="bb-icon-star-fill"></i>
									<i class="bb-icon-star-fill"></i>
									<i class="bb-icon-star-fill"></i>
								</div>
								<h3 class="title is-size-6 is-marginless">{{story.title}}</h3>
								<p class="is-marginless has-text-weight-light is-small">Ahora en <strong>{{story.get_field("job").company}}</strong></p>

							</div>
						</div>
						<div class="inner-content content">
							<div class="icons-list gold is-hidden-touch">
								<i class="bb-icon-star-fill"></i>
								<i class="bb-icon-star-fill"></i>
								<i class="bb-icon-star-fill"></i>
								<i class="bb-icon-star-fill"></i>
								<i class="bb-icon-star-fill"></i>
							</div>
							<p class="has-text-weight-light">{{story.txt}}</p>
							<h3 class="title is-size-5 is-marginless is-hidden-touch has-tiny-margin-top">{{story.title}}</h3>
							<p class="is-marginless has-text-weight-light is-hidden-touch">Ahora es {{story.get_field("job").position}} en <strong>{{story.get_field("job").company}}</strong></p>
	
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
		
	</div>
	
	<div class="container has-big-padding-top">
		<div class="columns is-multiline">
			{% for item in testimonials %}
				<div class="column is-one-third">
					{% include "snippets/testimonial.twig" with {testimonial : item } %}
				</div>
			{% endfor %}
		</div>
	</div>						
</section>