
<div id="primary" class="content-area bb-grid-cell is-paddingless-bottom">
<section class="section has-medium-padding-top" id="premium">
	<img src="{{post.thumbnail.src}}" alt="{{post.title}}"
             class="banner-img wp-post-image"/>
	{% if post.vimeo_id  %}
     <iframe id="videobg" data-src="https://player.vimeo.com/video/{{post.vimeo_id}}?background=1&autoplay=1&loop=1&byline=0&title=0"  data-img="{{post.thumbnail.src}}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen ></iframe>
    {% endif %}
	<div class="container has-medium-padding-top">
		<div class="columns is-vcentered">
			<div class="column is-four-fifths is-two-thirds-fullhd">
				<h1 class="title is-size-2 is-size-1-widescreen is-marginless">{{post.title}}</h1>
				<br>
				<ul class="simple">
					{% for benefit in post.get_field("benefits") %}
					<li><i class="bb-icon-check colored teal is-large"></i>{{benefit.txt}}</li>
					{% endfor %}
				</ul>
				<a href="#courses" class="button is-medium"><span>Empieza a aprender</span><i class="bb-icon-arrow-right"></i></a>				
			</div>
		</div>
	</div>
</section>
<section class="section">
	<div class="columns is-centered is-multiline">
		<div class="column is-full has-text-centered">
			<h5 class="is-marginless">Empresas donde trabajan nuestros mentores y egresados:</h5>
		</div>
		<div class="column is-two-thirds">
			<div class="partners has-small-padding-bottom">
				{% for partner in post.get_field("partners") %}
				<div class="partner">
					<img src="{{ Image(partner) }}" alt="{{partner.alt}} partner Arkde" loading="lazy" />
				</div>
				{% endfor %}
				<br>
			</div>
		</div>
	</div>
	<div class="columns is-multiline">
		{% for story in post.get_field("success_story") %}
		<div class="column is-half">
			<div class="big-testimonial colored dark">
				<div class="image">
					<img src="{{story.thumbnail}}" alt="{{story.title}} estudiante Arkde" loading="lazy" width="100px" height="100px">
					<div class="is-hidden-desktop mobile-content">
						<div class="icons-list gold">
							<i class="bb-icon-star-fill"></i>
							<i class="bb-icon-star-fill"></i>
							<i class="bb-icon-star-fill"></i>
							<i class="bb-icon-star-fill"></i>
							<i class="bb-icon-star-fill"></i>
						</div>
						<h3 class="title is-size-6 is-marginless">{{story.title}}</h3>
						<p class="is-marginless has-text-weight-light is-small">Ahora es {{story.get_field("job").position}} en <strong>{{story.get_field("job").company}}</strong></p>

					</div>
				</div>
				<div class="content">
					<div class="icons-list gold is-hidden-touch">
						<i class="bb-icon-star-fill"></i>
						<i class="bb-icon-star-fill"></i>
						<i class="bb-icon-star-fill"></i>
						<i class="bb-icon-star-fill"></i>
						<i class="bb-icon-star-fill"></i>
					</div>
					<p>{{story.txt}}</p>
					<h3 class="title is-size-5 is-marginless is-hidden-touch">{{story.title}}</h3>
					<p class="is-marginless has-text-weight-light is-hidden-touch">Ahora es {{story.get_field("job").position}} en <strong>{{story.get_field("job").company}}</strong></p>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</section>
<section class="section">
	<div class="columns is-centered is-vcentered is-multiline is-variable-in-desktop is-10">

		{% for feature in post.get_field("features") %}
		<div class="column is-half">
			<div class="media-item feature">
				<div class="image">
					<i class="{{feature.icon}} fa-3x"></i>
				</div>
				<div class="content">
					<h4>{{feature.header}}</h4>
					<p>{{feature.desc}}</p>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
	<div class="columns is-multiline is centered has-huge-padding-top has-small-margin-top is-variable-in-desktop is-8" id="courses">
		<div class="column is-full has-text-centered">
			<h2 class="title is-size-3 is-size-1-widescreen is-gold is-marginless">¡Empieza a aprender!</h2>
		</div>
		<div class="column is-half">
			<div class="columns is-multiline">
				<div class="column is-full">
					<h3 class="subtitle is-size-4 is-size-3-widescreen has-text-weight-bold with-subtitle">Cursos con mentorías</h3>
					<p>Cursos online donde tiene la opción de estudiar a tu ritmo o con mentorías semanales</p>
				</div>
				{% for course in post.get_field("courses_with_mentorships") %}
					<div class="column is-full">
						{% include "cards/course-item.twig" %}
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="column is-half">
			<div class="columns is-multiline">
				<div class="column is-full">
					<h3 class="subtitle is-size-4 is-size-3-widescreen has-text-weight-bold with-subtitle">Bootcamps</h3>
					<p>Cursos online con mentorías en vivo exclusivas que empiezan en una fecha especifica</p>
				</div>
				{% for bootcamp in post.get_field("bootcamps") %}
					<div class="column is-full">
						{% include "cards/course-item.twig" with {"course":bootcamp} %}
					</div>
				{% endfor %}
			</div>
		</div>
		
	</div>
</section>
